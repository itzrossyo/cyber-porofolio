---
import Socials from './Socials.astro';
---

<div class="contact-container">
    <!-- Start: Terminal -->
    <div class="terminal-container">
        <div class="terminal-header">
            <div class="terminal-buttons">
                <span class="terminal-button terminal-button-close"></span>
                <span class="terminal-button terminal-button-minimize"></span>
                <span class="terminal-button terminal-button-expand"></span>
            </div>
            <div class="terminal-title">connect@devross.co.uk</div>
        </div>
        <div class="terminal-body">
            <div class="terminal-line">
                <span class="text-primary">$</span>
                <span class="text-gray-100 ml-2">npx connect</span>
            </div>
            <div id="terminal-output" class="terminal-output">
                <div class="typing-animation">Initializing connection protocol...</div>
                <div class="typing-animation" style="--delay: 1.5s">Establishing secure channel...</div>
                <div class="typing-animation" style="--delay: 3s">Verifying credentials...</div>
                <div class="typing-animation success" style="--delay: 4.5s">âœ“ Connection established successfully!</div>
                <div class="typing-animation" style="--delay: 6s">
                    <div class="flex items-center">
                        <span class="mr-2">Ready to connect.</span>
                        <span class="terminal-cursor">|</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End: Terminal -->

    <!-- Start: Social Links -->
    <Socials />
    <!-- End: Social Links -->
</div>

<style>
    .terminal-container {
        @apply bg-gray-900 rounded-lg overflow-hidden border border-gray-700 shadow-lg mb-6;
        font-family: 'Fira Code', 'SF Mono', Monaco, Consolas, monospace;
    }

    .terminal-header {
        @apply bg-gray-800 px-4 py-2 flex items-center justify-between border-b border-gray-700;
    }

    .terminal-buttons {
        @apply flex space-x-2;
    }

    .terminal-button {
        @apply w-3 h-3 rounded-full;
    }

    .terminal-button-close {
        @apply bg-red-500;
    }

    .terminal-button-minimize {
        @apply bg-yellow-500;
    }

    .terminal-button-expand {
        @apply bg-green-500;
    }

    .terminal-title {
        @apply text-xs text-gray-400;
    }

    .terminal-body {
        @apply p-4 text-sm;
        min-height: 180px;
    }

    .terminal-line {
        @apply flex items-center mb-2;
    }

    .terminal-output {
        @apply mt-4 space-y-2;
    }

    .typing-animation {
        @apply text-gray-300;
        opacity: 0;
        animation: fadeIn 0.5s ease-out forwards;
        animation-delay: var(--delay, 0s);
    }

    .typing-animation.success {
        @apply text-green-400;
    }

    .typing-animation::after {
        content: '';
        display: inline-block;
        animation: typing 0.5s steps(40, end);
    }

    .terminal-cursor {
        @apply text-primary;
        animation: blink 1s step-end infinite;
    }

    @keyframes fadeIn {
        to {
            opacity: 1;
        }
    }

    @keyframes typing {
        from {
            width: 0;
        }
        to {
            width: 100%;
        }
    }

    @keyframes blink {
        from,
        to {
            opacity: 1;
        }
        50% {
            opacity: 0;
        }
    }
</style>
