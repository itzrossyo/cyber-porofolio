---
interface Project {
    name: string;
    description: string;
    link: {
        url: string;
        title?: string;
        target?: string;
    };
}

const projects: Project[] = [
    {
        name: 'CSLogon',
        description:
            'CS Logan is a professional, minimalist e-commerce platform built for a British author to showcase and sell their books. The site provides users with a smooth shopping experience, offering both a free downloadable PDF and a purchasable paperback option with dynamic pricing and secure Stripe checkout.',
        link: {
            url: 'https://cslogan.com/',
        },
    },
    {
        name: 'multistream',
        description:
            'Multistream 2.0 is a sleek, performance-optimized web application that allows users to watch multiple livestreams from different platforms (like Twitch and Kick) side-by-side in a unified interface. Built with content creators, esports fans, and multitaskers in mind, it delivers a distraction-free viewing experience with dynamic stream layout management.',
        link: {
            url: 'https://multistream2-0.vercel.app/',
        },
    },
    {
        name: 'Birmingham-egg',
        description: 'A responsive, themed landing page for Birmingham tourism. Features include smooth navigation, a playful local-food theme, and a contact form — all built with semantic HTML/CSS ',
        link: {
            url: 'https://itzrossyo.github.io/Birmingham-egg-milestone-project/',
        },
    },
];
---

<div class="projects-container">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {
            projects.map((project, index) => (
                <div class="project-card" style={`--delay: ${index * 100}ms`}>
                    <div class="project-content">
                        <h3 class="text-xl font-semibold text-white mb-3 group-hover:text-primary transition-colors duration-300">
                            {project.name}
                            <span class="text-primary ml-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300">→</span>
                        </h3>

                        <p class="text-gray-400 mb-4 group-hover:text-gray-300 transition-colors duration-300">{project.description}</p>

                        {project.link?.url && (
                            <a
                                href={project.link.url}
                                title={project.link.title || project.name}
                                target={project.link.target || '_blank'}
                                class="
                                    inline-block px-4 py-2.5 text-center
                                    border border-gray-600 rounded-lg
                                    text-gray-300 hover:text-white
                                    hover:border-primary hover:bg-primary/10
                                    transition-all duration-300
                                    transform hover:-translate-y-0.5
                                    focus:outline-none focus:ring-2 focus:ring-primary/50 focus:ring-offset-2 focus:ring-offset-gray-900
                                ">
                                View Project
                            </a>
                        )}
                    </div>
                </div>
            ))
        }
    </div>
</div>

<style>
    .project-card {
        @apply relative overflow-hidden rounded-xl border border-gray-700 bg-gray-900/50 backdrop-blur-sm p-6;
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInUp 0.6s ease-out forwards;
        animation-delay: calc(var(--delay) + 200ms);
        transition: all 0.3s ease;
    }

    .project-card:hover {
        @apply border-primary/30 shadow-lg shadow-primary/10;
        transform: translateY(-2px) !important;
    }

    .project-card::before {
        content: '';
        @apply absolute inset-0 bg-gradient-to-br from-primary/5 to-transparent opacity-0;
        transition: opacity 0.3s ease;
    }

    .project-card:hover::before {
        opacity: 1;
    }

    .project-content {
        @apply relative z-10 h-full flex flex-col;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
        .project-card {
            animation-delay: calc(var(--delay) / 2 + 100ms);
        }
    }
</style>
